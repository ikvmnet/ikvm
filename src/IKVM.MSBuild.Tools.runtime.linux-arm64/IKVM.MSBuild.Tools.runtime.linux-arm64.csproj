<Project Sdk="Microsoft.Build.NoTargets">
    <PropertyGroup>
        <TargetFrameworks>net472;net6.0</TargetFrameworks>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>IKVM MSBuild Tools</Description>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\LICENSE.md" Pack="true" PackagePath="." />
        <None Include="..\..\README.md" Pack="true" PackagePath="." />
        <None Include="buildTransitive\**\*" Pack="true" PackagePath="buildTransitive\%(RecursiveDir)%(Filename)%(Extension)" />
        <None Include="lib\**\*" Pack="true" PackagePath="lib\%(RecursiveDir)%(Filename)%(Extension)" />
    </ItemGroup>

    <ItemGroup>
        <PublishProjectReference Include="..\ikvmc\ikvmc.csproj">
            <SetTargetFramework>TargetFramework=net472</SetTargetFramework>
            <SetRuntimeIdentifier>RuntimeIdentifier=linux-arm64</SetRuntimeIdentifier>
            <PublishTargetPath Condition=" '$(TargetFramework)' == 'net472' ">ikvmc\net472\linux-arm64</PublishTargetPath>
            <CopyToOutputDirectory Condition=" '$(TargetFramework)' == 'net472' ">PreserveNewest</CopyToOutputDirectory>
            <PublishPackagePath>ikvmc\net472\linux-arm64</PublishPackagePath>
            <Pack>true</Pack>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj">
            <SetTargetFramework>TargetFramework=net472</SetTargetFramework>
            <SetRuntimeIdentifier>RuntimeIdentifier=linux-arm64</SetRuntimeIdentifier>
            <PublishTargetPath Condition=" '$(TargetFramework)' == 'net472' ">ikvmstub\net472\linux-arm64\bin</PublishTargetPath>
            <CopyToOutputDirectory Condition=" '$(TargetFramework)' == 'net472' ">PreserveNewest</CopyToOutputDirectory>
            <PublishPackagePath>ikvmstub\net472\linux-arm64</PublishPackagePath>
            <Pack>true</Pack>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmc\ikvmc.csproj">
            <SetTargetFramework>TargetFramework=net6.0</SetTargetFramework>
            <SetRuntimeIdentifier>RuntimeIdentifier=linux-arm64</SetRuntimeIdentifier>
            <PublishTargetPath Condition=" '$(TargetFramework)' == 'net6.0' ">ikvmc\net6.0\linux-arm64</PublishTargetPath>
            <CopyToOutputDirectory Condition=" '$(TargetFramework)' == 'net6.0' ">PreserveNewest</CopyToOutputDirectory>
            <PublishPackagePath>ikvmc\net6.0\linux-arm64</PublishPackagePath>
            <Pack>true</Pack>
        </PublishProjectReference>
        <PublishProjectReference Include="..\ikvmstub\ikvmstub.csproj">
            <SetTargetFramework>TargetFramework=net6.0</SetTargetFramework>
            <SetRuntimeIdentifier>RuntimeIdentifier=linux-arm64</SetRuntimeIdentifier>
            <PublishTargetPath Condition=" '$(TargetFramework)' == 'net6.0' ">ikvmstub\net6.0\linux-arm64</PublishTargetPath>
            <CopyToOutputDirectory Condition=" '$(TargetFramework)' == 'net6.0' ">PreserveNewest</CopyToOutputDirectory>
            <PublishPackagePath>ikvmstub\net6.0\linux-arm64</PublishPackagePath>
            <Pack>true</Pack>
        </PublishProjectReference>
    </ItemGroup>

</Project>
