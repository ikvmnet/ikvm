$([MSBuild]::Unescape('$(___IkvmFileIdentityUtilCs)'))
$([MSBuild]::Unescape('$(___IkvmReferenceItemCs)'))
$([MSBuild]::Unescape('$(___IkvmAsyncTaskCs)'))
$([MSBuild]::Unescape('$(___IkvmReferenceItemMetadataCs)'))
